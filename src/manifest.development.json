{
 "manifest_version": 3,
 "name": "Image Scanner",
 "description": "Scan images",
 "version": "0.0.1",

 "permissions": [
  "scripting",
  "activeTab",
  "contextMenus",
  "tabs",
  "webRequest"
 ],

 "icons": {
  "16": "icons/bes16.png",
  "48": "icons/bes48.png",
  "128": "icons/bes128.png"
 },

 "action": {
  "default_popup": "popup.html"
 },

 "content_scripts": [
  {
   "matches": ["https://*.google.com/*"],
   "all_frames": true,
   "js": ["content.js"]
  }
 ],

 "content_security_policy": {
  "extension_page": "script-src 'self' 'unsafe-eval'"
 },

 "host_permissions": ["*://*/*"]
}
